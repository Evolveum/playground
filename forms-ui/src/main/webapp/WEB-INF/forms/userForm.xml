<form xmlns="http://midpoint.evolveum.com/xml/ns/public/gui/form"
      name="User Detail Form">

    <fieldGroup>
        <label>xml.public.common.user.main</label>

        <field value="user.name">
            <label>xml.public.common.user.name</label>
            <help>xml.public.common.user.name.help</help>
            <tooltip>xml.public.common.user.name.tooltip</tooltip>
            <display type="input">
                <property name="size">20</property>
            </display>
            <enabled>
                <create/>
                <read/>
            </enabled>
            <visible>
                <create/>
                <read/>
                <update/>
            </visible>
        </field>
        <field value="user.givenName">

        </field>
        <field value="user.familyName" newLine="false">

        </field>
        <field value="user.fullName">

        </field>
    </fieldGroup>
    <fieldGroup>
        <label>xml.public.common.user.settings</label>


    </fieldGroup>
</form>